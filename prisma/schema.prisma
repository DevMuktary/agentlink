// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. USERS (Agents & Admins)
model User {
  id              String   @id @default(cuid())
  email           String   @unique
  password        String
  
  // New Fields
  firstName       String
  lastName        String
  businessName    String?
  phoneNumber     String?
  websiteUrl      String?

  role            Role     @default(AGENT)
  
  // Wallet
  walletBalance   Decimal  @default(0.00) @db.Decimal(10, 2)
  bonusBalance    Decimal  @default(0.00) @db.Decimal(10, 2)

  // API Integration Details
  apiKeyPublic    String?  @unique
  apiKeySecret    String?  @unique
  webhookUrl      String?
  ipWhitelist     String?

  // Relationships
  transactions    Transaction[]
  requests        ServiceRequest[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// 2. WALLET LOGS
model Transaction {
  id          String          @id @default(cuid())
  userId      String
  amount      Decimal         @db.Decimal(10, 2)
  type        TransactionType
  reference   String          @unique
  status      Status          @default(PENDING)
  description String?
  
  user        User            @relation(fields: [userId], references: [id])
  createdAt   DateTime        @default(now())
}

// 3. SERVICE REQUESTS
model ServiceRequest {
  id            String      @id @default(cuid())
  userId        String
  serviceType   ServiceType 
  status        Status      @default(PENDING) 
  requestData   Json        
  responseData  Json?       
  cost          Decimal     @default(0.00) @db.Decimal(10, 2)
  adminNote     String?     

  user          User        @relation(fields: [userId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([serviceType])
}

// --- ENUMS ---

enum Role {
  SUPER_ADMIN
  ADMIN
  AGENT
}

enum TransactionType {
  DEPOSIT
  SERVICE_CHARGE
  REFUND
  BONUS
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REJECTED
}

enum ServiceType {
  AIRTIME
  DATA
  NIN_VERIFICATION
  NIN_VALIDATION
  NIN_PERSONALIZATION
  VNIN_SLIP
  VNIN_TO_NIBSS
  BVN_VERIFICATION
  BVN_RETRIEVAL
  BVN_MODIFICATION
  ANDROID_BVN_ENROLLMENT
  CAC_REGISTRATION
  IPE_CLEARANCE
  JTB_TIN_REGISTRATION
  JAMB_SERVICES
  EXAM_PIN_WAEC
  EXAM_PIN_NECO
  EXAM_PIN_NABTEB
  EXAM_PIN_JAMB
}
