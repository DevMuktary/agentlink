generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. USERS
model User {
  id              String   @id @default(cuid())
  email           String   @unique
  password        String
  
  firstName       String
  lastName        String
  businessName    String?
  phoneNumber     String?
  websiteUrl      String?
  role            Role     @default(AGENT)
  
  walletBalance   Decimal  @default(0.00) @db.Decimal(10, 2)
  bonusBalance    Decimal  @default(0.00) @db.Decimal(10, 2)

  apiKeyPublic    String?  @unique
  apiKeySecret    String?  @unique
  webhookUrl      String?
  ipWhitelist     String?

  transactions    Transaction[]
  requests        ServiceRequest[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// 2. SERVICES
model Service {
  id          String      @id @default(cuid())
  code        ServiceType @unique
  serviceCode Int?        @unique // Used for Manual options
  name        String
  description String?
  price       Decimal     @default(0.00) @db.Decimal(10, 2)
  isActive    Boolean     @default(true)

  updatedAt   DateTime    @updatedAt
}

// 3. SERVICE REQUESTS
model ServiceRequest {
  id            String      @id @default(cuid())
  userId        String
  serviceType   ServiceType 
  status        Status      @default(PENDING) 
  
  requestData   Json        
  responseData  Json?
  cost          Decimal     @default(0.00) @db.Decimal(10, 2)
  adminNote     String?

  user          User        @relation(fields: [userId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([serviceType])
}

// 4. WALLET LOGS
model Transaction {
  id          String          @id @default(cuid())
  userId      String
  amount      Decimal         @db.Decimal(10, 2)
  type        TransactionType
  reference   String          @unique
  status      Status          @default(PENDING)
  description String?
  serviceId   String?
  
  user        User            @relation(fields: [userId], references: [id])
  createdAt   DateTime        @default(now())
}

// --- ENUMS ---

enum Role {
  SUPER_ADMIN
  ADMIN
  AGENT
}

enum TransactionType {
  DEPOSIT
  SERVICE_CHARGE
  REFUND
  BONUS
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REJECTED
}

enum ServiceType {
  // UTILITIES
  AIRTIME
  DATA
  
  // NIN SERVICES
  NIN_VERIFICATION       
  NIN_SEARCH_BY_PHONE 
  
  // VALIDATION TYPES
  NIN_VALIDATION_NO_RECORD
  NIN_VALIDATION_UPDATE_RECORD
  NIN_VALIDATION_VNIN
  
  // SLIP GENERATION
  NIN_SLIP_PREMIUM
  NIN_SLIP_STANDARD
  NIN_SLIP_REGULAR
  
  // MODIFICATION TYPES (NEW)
  NIN_MODIFICATION_NAME
  NIN_MODIFICATION_PHONE
  NIN_MODIFICATION_ADDRESS

  // OTHERS
  NIN_PERSONALIZATION
  VNIN_SLIP
  VNIN_TO_NIBSS
  IPE_CLEARANCE
  
  // BVN SERVICES
  BVN_VERIFICATION
  BVN_RETRIEVAL
  BVN_MODIFICATION
  ANDROID_BVN_ENROLLMENT
  
  // CORPORATE
  CAC_REGISTRATION
  JTB_TIN_REGISTRATION
  
  // EDUCATION
  JAMB_SERVICES
  EXAM_PIN_WAEC
  EXAM_PIN_NECO
  EXAM_PIN_NABTEB
  EXAM_PIN_JAMB
}
